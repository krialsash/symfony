{% extends 'base.html.twig' %}

{% block body %}
    <h1>Entities list</h1>

    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Create date</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in articles %}
            <tr>
                <td><a href="{{ path('article_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('article_delete', { 'id': entity.id }) }}">delete</a>
                        </li>
                        <li>
                            <a href="{{ path('article_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('article_new') }}">Create a new entity</a>
        </li>
    </ul>
{% endblock %}